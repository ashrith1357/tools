#!/usr/bin/env bash

# ###################################################
# spe-git
# ###################################################


tpath="$HOME/tools/bin"

clone () {

  rsync -r $cpath/detect-aws-credentials.sh > .git/hooks/pre-commit
  chmod 755 .git/hooks/pre-commit
}



case $1
in
   clone) clone $2 ;;

       *) echo "Invalid Argument passed" ;;

esac
