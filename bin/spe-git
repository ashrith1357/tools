#!/usr/bin/env bash

# ###################################################
# spe-git
# ###################################################


tpath="$HOME/tools/bin"

clone () {
  git clone $1
  basename=$(basename $1)
  filename=${basename%.*}
  cd $filename
  mv .git/hooks/pre-commit.sample .git/hooks/pre-commit
  cp $tpath/detect-aws-credentials.sh  .git/hooks/pre-commit
  chmod 755 .git/hooks/pre-commit
}

commit () {
      git commit -m $1
}

case $1
in
   clone) clone $2 ;;
   commit) commit $2 ;;

       *) echo "Invalid Argument passed" ;;

esac
